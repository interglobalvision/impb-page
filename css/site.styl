  // styl property ordering: https://github.com/rossPatton/stylint/blob/master/src/data/ordering.json

@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(45, 45, 45)
$color-white = rgb(255, 255, 255)
$color-grey-light = rgb(238, 238, 238)
$color-grey-mid = rgb(218, 218, 218)
$color-grey-dark = rgb(180, 180, 180)
$color-yellow-light = rgb(244, 214, 20)
$color-yellow-dark = rgb(225, 197, 36)

// ******************************************************

// BASIC

html
  background-color: $color-grey-light
  color: $color-black

img
  max-width: 100%
  height: auto

.mobile-only
  display: initial !important 
  
.desktop-only
  display: none !important

.fill-grey-dark
  fill: $color-grey-dark
  
.fill-grey-mid
  fill: $color-grey-mid
  
.fill-grey-light
  fill: $color-grey-light
  
.fill-yellow-dark
  fill: $color-yellow-dark
  
.fill-yellow-light
  fill: $color-yellow-light
  
.fill-black
  fill: $color-black

// ******************************************************

// HEADER 

#header 
  width: 100%
  font-size: 0
  // fixes a phantom margin issue
  .container
    background-image: url('../img/dist/the_matrix.png') 
    background-size: 70%
    background-position: center
    background-repeat: no-repeat
  
#impb-ship-large
  margin-bottom: -1px
  // fixes a phantom margin issue
  
// ******************************************************

// MAIN 

#main-content 
  width: 100%
  
.banner-yellow 
  background-color: $color-yellow-light
  
// ******************************************************

// FOOTER 

#footer 
  width: 100%
  background-color: $color-grey-dark
  color: $color-grey-mid
  img 
    max-height: 50px
  
// ******************************************************

// MEDIA QUERIES

$gutter = 14px 

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)
    
$font-size-basic = 28px
$font-size-large = 42px
$font-size-mid = 36px
$font-size-small = 21px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px
  
  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
    
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  grid(680px, $gutter, m)
    
  .mobile-only
    display: none !important
  
  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  $font-size-basic = 16px

  grid(1000px, $gutter, l)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
    
  .desktop-only
    display: initial !important

  @import 'responsive/desktop'
  
@media screen and (min-width: 1280px)
  
  grid(1200px)

@media screen and (min-width: 1366px)

  grid(1300px)

@media screen and (min-width: 1680px)

  grid(1600px)

@media screen and (min-width: 1920px)

  grid(1800px)
